{% extends '@ProntoMobile/base.html.twig' %}

{% block body %}
    {% include '@ProntoMobile/components/pageTitle.html.twig' with {entity: 'app_version', exists: version != null, backButton: path('pronto_mobile_app_versions')} %}

    <div class="row card">
        <div class="card-content col s12">
            {{ form_start(form) }}

            <div class="row">
                <div class="col s6">
                    {{ form_row(form.version) }}
                </div>
                <div class="col s6">
                    {{ form_row(form.platform) }}
                </div>
            </div>

            <div class="row">
                <div class="col s6">
                    {{ form_row(form.releaseDate) }}
                </div>
            </div>

            {% for description in form.description %}
                <div class="row">
                    <div class="col s12">
                        {{ form_label(description, null, {
                            'label': 'app_version.description_label'|trans({'%lang%': description.vars.name|upper}),
                        }) }}

                        {{ form_widget(description) }}
                    </div>
                </div>
            {% endfor %}

            <div class="row">
                <div class="col s12">
                    {{ form_row(form.url) }}
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    {{ form_label(form.file) }}
                    {{ form_errors(form.file) }}
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>{{ 'app_version.file'|trans }}</span>
                            {{ form_widget(form.file) }}
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path" type="text">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    {{ form_row(form.required) }}
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn btn-primary" formnovalidate>{{ 'buttons.save'|trans }}</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}