<div class="row">
    <div class="col s12">
        <label for="{{ property.identifier }}" {% if property.required == true %}class="required"{% endif %}>{{ property.name }}</label>

        {% set value = attribute(entry.data, property.identifier) is defined ? attribute(entry.data, property.identifier) : property.config.defaultValue %}

        <input type="text" class="datepicker" name="{{ property.identifier }}" id="{{ property.identifier }}" value="{{ value == 'now' ? 'now'|date('d-m-Y') : (value != '' ? value|date('d-m-Y') : '') }}">
    </div>
</div>