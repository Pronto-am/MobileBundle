{% extends '@ProntoMobile/authentication.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 m8 l6 offset-m2 offset-l3">
                <h1><img src="{{ webpack_asset_tags('/images/logo-login.png') }}" alt="Pronto" /></h1>

                <div class="card">
                    {% include "@ProntoMobile/components/loader.html.twig" %}
                    <div class="card-content">
                        <h1><span>/</span> {{ 'authentication.login'|trans }}</h1>
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% for type, messages in app.session.flashBag.all() %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form_start(form) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}
                        <div class="right-align">
                            <button type="submit" class="btn btn-success activate-loader" formnovalidate>{{ 'authentication.login'|trans }}</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <a href="{{ path('pronto_mobile_forgot_password') }}">{{ 'authentication.forgot_password'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
