{% extends '@ProntoMobile/base.html.twig' %}

{% block body %}
    {% include '@ProntoMobile/components/pageTitle.html.twig' with {entity: 'translation', exists: translation != null, backButton: path('pronto_mobile_translations')} %}

    <div class="row card" id="details">
        <div class="card-content col s12">
            {{ form_start(translationForm) }}

            <div class="row">
                <div class="col s12 m8">
                    {{ form_row(translationForm.key) }}
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn btn-primary" formnovalidate>{{ 'buttons.save'|trans }}</button>
                </div>
            </div>

            {{ form_end(translationForm) }}
        </div>
    </div>
{% endblock %}